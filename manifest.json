{
    "manifest_version": 2,
    "name": "D365-UI-Test-Designer",
    "description": "A browser extension for designing and capturing D365 UI Tests",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["js/inject.js"]
        }
    ],
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "web_accessible_resources": ["js/content.js"],
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}